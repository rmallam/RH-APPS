apiVersion: v1
kind: List
items:

- kind: StorageClass
  apiVersion: storage.k8s.io/v1
  metadata:
    name: azurefiles{{ storage_class_namespace | default('')}}
    namespace: {{ storage_class_namespace | default('default') }}
  provisioner: kubernetes.io/azure-file
  mountOptions:
    - dir_mode=0777
    - file_mode=0777
    - uid={{ namespace_uid | default(0) }} 
    - gid=0
    - mfsymlinks
    - cache=strict
    - actimeo=30
  parameters:
    skuName: Standard_LRS